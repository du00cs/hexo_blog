icon-size = 32px
icon-gap = 25px

article

  a:hover
    color #000

  font-weight 400
  font-family Georgia,Cambria,serif
  line-height 2rem
  color #373D49
  font 1rem
  &.page
    padding-left 20px
    .icon
      display none

  &.post
    .icon
      &:before
        content '\f016'

  &.photo
    .icon
      &:before
        content '\f030'

  &.link
    .icon
      &:before
        content '\f0c1'

    .title
      a
        &:after
          content '\f08e'
          color color-meta
          font 12px font-icon
          padding-left 10px
          vertical-align super

  .post-content
    margin-bottom 50px
    position relative

  .post-content-index
    padding 0 20px 0 (icon-size + icon-gap + 20)
    margin-bottom 50px
    position relative
    @media screen and (max-width: 768px)
      padding-left 20px
      margin-bottom 20px
    header
      margin-bottom 20px
      @media screen and (max-width: 768px)
        margin-bottom 15px
      .icon
        width icon-size
        height icon-size
        margin-right icon-gap
        position absolute
        top 10px
        left 20px
        color color-link
        @media screen and (max-width: 768px)
          display none
        &:before
          position absolute
          font 45px font-icon
          top 0
          left 0
          width 32px
          text-align center

      .title
        font-size px
        font-weight 300
        a
          color color-link
          &:hover
            color #000
            text-decoration none
      ul
        margin-bottom .83999rem
        padding-top .16001rem
        list-style-type disc
        font-weight 400
        line-height 2rem
        li
          margin-left 1rem
          display list-item
          @media screen and (max-width: 768px)
            display block
            font-size 0.8em
            line-height 22px
          .heading-span
            color #444
            font-weight 400
          time
            color rgb(102, 102, 102)
            display:inline;
          a
            text-decoration underline
            color #009CDC
            &:hover
              color #000

  .gallery
    overflow hidden
    position relative
    &:hover
      .control
        opacity 1

    img
      min-width 100%
      max-width 100%
      height auto
      position absolute
      top 0
      left 0
      opacity 0

    .control
      opacity 0
      transition 0.3s

    .prev, .next
      position absolute
      top 0
      width 50%
      height 100%
      cursor pointer
      &:before
        position absolute
        font 24px/1 font-icon
        text-align center
        width 24px
        text-shadow 0 0 15px rgba(0,0,0,0.5)
        color #fff
        margin-top -12px
        top 50%

    .prev
      left 0
      &:before
        content '\f053'
        left 10px

    .next
      right 0
      &:before
        content '\f054'
        right 10px

  .entry
    text-align left
    line-height 1.5
    letter-spacing 0.01rem

    p
      word-wrap break-word
      font-size 1rem

    blockquote
      font-style italic
      font-family font-serif
      font-size 1rem
      border-left 3px solid #A0AABF
      padding .66001rem 1rem 1rem
      margin-bottom .33999rem
      padding-top .66001rem
      text-align left
      footer
        border-top none
        font-size 0.8em
        line-height 1
        margin 20px 0 0
        padding-top 0
        cite
          &:before
            content 'â€”'
            color #ccc
            padding 0 0.5em
    table
      padding: 0
      border-collapse: collapse

    table tr
      border-top: 1px solid #cccccc
      background-color: white
      margin: 0
      padding: 0

    table tr:nth-child(2n)
      background-color: #f8f8f8

    table tr th
      font-weight: bold
      border: 1px solid #cccccc
      margin: 0
      padding: 6px 13px

    table tr td
      border: 1px solid #cccccc
      margin: 0
      padding: 6px 13px

    table tr th :first-child,
    table tr td :first-child
      margin-top: 0

    table tr th :last-child,
    table tr td :last-child
      margin-bottom: 0

    code, pre
      font-family font-mono

    code
      background #eee
      color #666
      padding 0 5px
      margin 0 2px
      font-size 0.9em
      border 1px solid color-border
      border-radius 3px

    pre
      background #eee
      border 1px solid color-border
      margin-top 15px
      overflow auto
      padding 7px 15px
      border-radius 2px
      code
        background none
        padding 0
        margin 0
        border none
        border-radius 0

    ul, ol, dl
      margin-bottom .83999rem
      padding-top .16001rem
      font-weight 400
      line-height 2rem

    ol
      list-style-type decimal
      li
        margin-left 1rem
        display list-item


    h1
      font-size 2.05714rem
      margin-bottom .21999rem
      padding-top .78001rem
      line-height 3rem

    h2
      font-size 1.95312rem
      margin-bottom .18358rem
      padding-top .81642rem

    h3
      font-size 1.64571rem
      margin-bottom .07599rem
      padding-top .92401rem

    h2, h3
      line-height 3rem

    h1, h2, h3, h4, h5, h6
      font-family "Source Sans Pro","Helvetica Neue",Helvetica,Arial,sans-serif
      font-weight 600
      font-style nomal
      margin-top 0

    img, video
      max-width 100%
      height auto
      border none

    iframe
      border none

    .caption
      display block
      margin-top 5px
      color color-meta
      position relative
      font-size 0.9em
      padding-left 25px
      &:before
        content '\f040'
        position absolute
        font 1.3em font-icon
        position absolute
        left 0
        top 3px

    .video-container
      position relative
      padding-bottom 56.25%
      padding-top 30px
      height 0
      overflow hidden
      iframe, object, embed
        position absolute
        top 0
        left 0
        width 100%
        height 100%
        margin-top 0

    .pullquote
      float right
      border none
      padding 0
      margin 1em 0 0.5em 1.5em
      text-align left
      width 45%
      font-size 1.5em

  footer
    padding-bottom 30px
    margin-bottom 40px
    border-bottom 2px solid #eee
    margin-top 25px
    color color-meta
    font-size 0.9em
    line-height 16px
    position relative
    min-height 16px
    @media screen and (max-width: 768px)
      margin-bottom 20px
      padding-bottom 30px

    .share
      margin-top 30px

    .alignright
      .more-link
        font-style italic
        font-weight 600
        color color-link
        &:hover
          color #000
          text-decoration none
        i
            margin-left 5px
    .categories, .tags
      position relative
      padding-left 25px
      margin 5px 0
      &:before
        position absolute
        font 1.1em font-icon
      a
        color color-meta
        &:hover
          color color-link
          text-decoration none
        &:before
          font 1.1em font-icon
          padding-right 10px
          vertical-align middle

      &.comment-link
        &:before
          content '\f075'

    .categories
      &:before
        content '\f07b'
        top 2px
        left 1px

    .tags
      &:before
        content '\f02b'
        top 3px
        left 2px

    .article-nav
      margin-top 10px
      border-top 1px solid #eee
      padding-top 15px
      .article-prev, .article-next
        float left
        width 48%
        color #009CDC
        font-weight normal
        a:hover
          color #000
          text-decoration none
      .article-next
        text-align right
        float right
